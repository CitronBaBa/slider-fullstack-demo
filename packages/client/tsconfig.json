{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*", "./tailwind.config.js"],
      "@fullstack-demo/domain": ["../domain/src"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "target": "ESNext",
    "types": ["vite/client"]
  },
  "include": ["./tailwind.config.js", "**/*.ts", "**/*.tsx"]
}
